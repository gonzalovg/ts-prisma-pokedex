{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Launch Program",
          "program": "${workspaceFolder}/src/index.ts",
          "preLaunchTask": "tsc: build - tsconfig.json",
          "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
          ],
          "skipFiles": [
              "${workspaceFolder}/node_modules/**/*.js",
              "${workspaceFolder}/lib/**/*.js",
              "<node_internals>/**"
          ],
          "console": "integratedTerminal"
      }
  ]
}